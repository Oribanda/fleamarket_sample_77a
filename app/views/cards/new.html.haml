%body
  = render partial: 'items/header'
  .content
    .left-box
      .my-plof
        %p プロフィール
        .left-list
          = link_to "マイアカウント情報","#", class: '.link'
        .left-list
          = link_to "支払い方法の確認","#", class: '.link'
      .my-business
        %p マイページメニュー
        .left-list
          = link_to "出品する","#", class: '.link'
        .left-list
          = link_to "いいね！一覧","#", class: '.link'
        .left-list
          = link_to "出品中の商品","#", class: '.link'
        .left-list
          = link_to "売却した商品","#", class: '.link'
        .left-list
          = link_to "購入した商品","#", class: '.link'
        .left-list
          = link_to "ログアウトする","#", class: '.link'
    .right-box
      %p支払い方法の確認
      .credit-info
        %p1クレジットカードの登録
        .form-box
          = form_tag(pay_cards_path, method: :post, id: "charge-form", name: "inputForm") do
            %span.charge-errors
            .register-inner__content

              .form-group
                %span.registration_font カード番号
                %span.require-icon 必須
                = text_field_tag "number", "", class: "input-default", id: "card_number", name: "card-number", placeholder: "カード番号", type: "text" ,maxlength: "16"
                .card-list
                  = image_tag 'credit/visa.png', class:"card-png"
                  = image_tag 'credit/master.png', class:"card-png"
                  = image_tag 'credit/jcb.png', class:"card-png"
                  = image_tag 'credit/american.png', class:"card-png"
                  = image_tag 'credit/diners.png', class:"card-png"
                  = image_tag 'credit/discover.png', class:"card-png"

              .form-group
                %span.registration_font 有効期限
                %span.require-icon 必須
                .date-box
                  .expiration_date_box
                    .expiration_date_box__wrap
                      %select{maxlength: "2", class: "exp_month", type: "text", id: "exp_month"}
                        %option{value: "1"}01
                        %option{value: "2"}02
                        %option{value: "3"}03
                        %option{value: "4"}04
                        %option{value: "5"}05
                        %option{value: "6"}06
                        %option{value: "7"}07
                        %option{value: "8"}08
                        %option{value: "9"}09
                        %option{value: "10"}10
                        %option{value: "11"}11
                        %option{value: "12"}12
                      %i.fas.fa-angle-down.payment-select-icon
                      %text.expiration_date_box__text 月

                  .expiration_date_box
                    .expiration_date_box__wrap
                      %select{maxlength: "4", id: "exp_year", class: "exp_year", type: "text"}
                        %option{value: "2019"}19
                        %option{value: "2020"}20
                        %option{value: "2021"}21
                        %option{value: "2022"}22
                        %option{value: "2023"}23
                        %option{value: "2024"}24
                        %option{value: "2025"}25
                        %option{value: "2026"}26
                        %option{value: "2027"}27
                        %option{value: "2028"}28
                        %option{value: "2029"}29
                      %i.fas.fa-angle-down.payment-select-icon
                      %text.expiration_date_box__text 年
              .form-group
                %span.registration_font セキュリティー番号
                %span.require-icon 必須
                = text_field_tag "cvc", "", class: 'input-default', id: "cvc", name: "cvc-number", placeholder: "カード背面4桁もしくは３桁の番号", type: "text", maxlength: "4"
                .card-indo
                  カード裏面の番号とは
              .actions
                #card_token
                = submit_tag "登録する", class: "register-member", id: "token_submit"
  %aside
    .inner
      %h2.inner__title
        = "だれでもかんたん、人生を変えるフリマアプリ"
      %p.inner__text
        = "今すぐ無料ダウンロード！"
      .inner__btn
        = link_to "/", class:"abtn" do
          = image_tag 'http://furima.tokyo/assets/app-store-9c5e28e8f81bd9912e0ded2f78821e04778a1356c05dc7c7bf1e88614be37c34.svg'
        = link_to "/", class:"abtn" do
          = image_tag 'http://furima.tokyo/assets/google-play-469c63f1269e456307c4dde176b33cc3bbbbf142ac4d7369656010130149db1a.svg'

  = render partial: 'items/footer'
  = link_to "/" do
    .pur-btn
      %span.pur-btn__text
        = "出品する"
      = image_tag 'icon/icon_camera.png' 