%body
  = render partial: 'items/header'
  .content
    .left-box
      .my-plof
        %p プロフィール
        .left-list
          = link_to "マイアカウント情報","#", class: '.link'
        .left-list
          = link_to "支払い方法の確認","#", class: '.link'
      .my-business
        %p マイページメニュー
        .left-list
          = link_to "出品する","#", class: '.link'
        .left-list
          = link_to "いいね！一覧","#", class: '.link'
        .left-list
          = link_to "出品中の商品","#", class: '.link'
        .left-list
          = link_to "売却した商品","#", class: '.link'
        .left-list
          = link_to "購入した商品","#", class: '.link'
        .left-list
          = link_to "ログアウトする","#", class: '.link'
    .right-box
      %p支払い方法の確認
      .credit-info
        %p1クレジットカード情報
        .show
          .credit_card__list
            .credit_card__list__title
              クレジットカード一覧
            .credit_card__list__frame
              .credit_card_info
                .credit_card_info__brand
                  = image_tag "credit/#{@card_src}", class: "credit_card_info__brand__img", alt: @card_brand
                .credit_card_info__numbers
                  .number
                    = "**** **** **** " + @customer_card.last4
                  .expiration_date
                    .expiration_date__title
                      有効期限
                    .expiration_date__info
                      = @exp_month + " / " + @exp_year
              .destroy__function
                = link_to card_path, method: :delete do
                  .destroy__function__link
                    = "削除"
  %aside
    .inner
      %h2.inner__title
        = "だれでもかんたん、人生を変えるフリマアプリ"
      %p.inner__text
        = "今すぐ無料ダウンロード！"
      .inner__btn
        = link_to "/", class:"abtn" do
          = image_tag 'http://furima.tokyo/assets/app-store-9c5e28e8f81bd9912e0ded2f78821e04778a1356c05dc7c7bf1e88614be37c34.svg'
        = link_to "/", class:"abtn" do
          = image_tag 'http://furima.tokyo/assets/google-play-469c63f1269e456307c4dde176b33cc3bbbbf142ac4d7369656010130149db1a.svg'

  = render partial: 'items/footer'
  = link_to "/" do
    .pur-btn
      %span.pur-btn__text
        = "出品する"
      = image_tag 'icon/icon_camera.png'                   