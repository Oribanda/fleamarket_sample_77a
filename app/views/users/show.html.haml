%body
  %header
    .header-inner
      .header-inner__main
        %h1.header-inner__main__icon
          = link_to "/" do
            = image_tag 'logo/logo.png'
        .header-inner__main__box
          = form_with url: "/" do |form|
            = form.text_field :key, id:"seach-input", class:"seach-box-input", placeholder:"キーワードから探す"
            %button{:type => "submit"}
              .search-icon
                = image_tag 'icon/icon-search 1.png'
      .header-inner__nav
        %ul.lists-left
          %li.lists-left__first.lists-left__list
            = link_to "/" do
              = "カテゴリー"
          %li.lists-left__list
            = link_to "/" do
              = "ブランド"
        %ul.lists-right
          %li.lists-right__list
            = link_to "/" do
              = "ログアウト"
  .mains
    .left-box
      .my-plof
        %p プロフィール
        .left-list
          = link_to "マイアカウント情報","#", class: '.link'
        .left-list
          = link_to "支払い方法の確認","#", class: '.link'
      .my-business
        %p マイページメニュー
        .left-list
          = link_to "出品する","#", class: '.link'
        .left-list
          = link_to "いいね！一覧","#", class: '.link'
        .left-list
          = link_to "出品中の商品","#", class: '.link'
        .left-list
          = link_to "売却した商品","#", class: '.link'
        .left-list
          = link_to "購入した商品","#", class: '.link'
        .left-list
          = link_to "ログアウトする","#", class: '.link'
    .mypage-box
      %pマイアカウント情報
      .mypage-box__profile
        %pプロフィール 
        .upper            
          .myprofile-nickname
            = current_user.nickname
          .myprofile-avter
            = image_tag 'icon/member_photo_noimage_thumb.png'
          .myprofile-introduce
            = current_user.introduce     
      .mypage-box__details
        %p本人情報
        .myprofile__details__list
          名前　　　：　#{current_user.first_name}#{current_user.last_name}
          %br
          フリガナ　：　#{current_user.first_name_kana}#{current_user.last_name_kana}
          %br
          生年月日　：　#{current_user.birthday}
          %br
          e-mail　　 ：　#{current_user.email}
        .link_edit
          = link_to "プロフィール編集","#", class: '.link'
      .mypage-box__identification
        %p送付先情報
        .mypage-box__identification__list
          郵便番号　　：　〒#{@address.postal_code}
          %br
          送付先住所　：　#{@address.prefectur}#{@address.city}#{@address.house_number}
          %br
          マンション等：　#{@address.apartment}
          %br
          電話番号　　：　#{@address.phone}
          %br
          名前　　　　：　#{@address.first_name}#{@address.last_name}
          %br
          フリガナ　　：　#{@address.first_name_kana} #{@address.last_name_kana}
        .link_edit
          = link_to "送付先情報編集","#", class: '.link'     
  %aside
    .inner
      %h2.inner__title
        = "だれでもかんたん、人生を変えるフリマアプリ"
      %p.inner__text
        = "今すぐ無料ダウンロード！"
      .inner__btn
        = link_to "/", class:"abtn" do
          = image_tag 'http://furima.tokyo/assets/app-store-9c5e28e8f81bd9912e0ded2f78821e04778a1356c05dc7c7bf1e88614be37c34.svg'
        = link_to "/", class:"abtn" do
          = image_tag 'http://furima.tokyo/assets/google-play-469c63f1269e456307c4dde176b33cc3bbbbf142ac4d7369656010130149db1a.svg'
  .footer
    %ul.contents
      %li.contents__content
        %h2.contents__content__head
          = "FURIMAについて"
        %ul
          %li
            = link_to "/" do
              = "会社概要（運営会社）"
          %li
            = link_to "/" do
              = "プライバシーポリシー"
          %li
            = link_to "/" do
              = "FURIMA利用規約"
          %li
            = link_to "/" do
              = "ポイントに関する特約"
      %li.contents__content
        %h2.contents__content__head
          = "FURIMAを見る"
        %ul
          %li
            = link_to "/" do
              = "カテゴリー一覧"
          %li
            = link_to "/" do
              = "ブランド一覧"
      %li.contents__content
        %h2.contents__content__head
          = "ヘルプ＆ガイド"
        %ul
          %li
            = link_to "/" do
              = "FURIMAガイド"
          %li
            = link_to "/" do
              = "FURIMAロゴ利用ガイドライン"
          %li
            = link_to "/" do
              = "お知らせ"
    .footer__logo
      = link_to "/" do
        = image_tag 'logo/logo-white.png'
    %p
      = "© FURIMA" 
  = link_to "/" do
    .pur-btn
      %span.pur-btn__text
        = "出品する"
      = image_tag 'icon/icon_camera.png' 