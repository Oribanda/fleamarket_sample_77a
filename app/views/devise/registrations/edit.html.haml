-# 会員情報編集画面 = render partial: 'layouts/simple_headder'

-# ヘッダー
.wrapper
  .main-product
    .main-product-header
      .main-product-header-logo
        = link_to image_tag('/assets/logo/logo.png', alt: 'text', height: '60', width: '200', class: 'icon'), root_path



  -# メイン
  .user-sign
    .user-sign__forms
      %h1.user-sign__forms__title 会員情報編集
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = render "devise/shared/error_messages", resource: resource
        .user-sign__forms__title__contents
          .user-sign__forms__title__contents__group
            .field
              = f.label :ニックネーム
              %br/
              = f.text_field :nickname, placeholder:"例）フリーマ", required:"required", class:"input-form"
            .field
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email"
            -# - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            -#   %div
            -#     Currently waiting confirmation for: #{resource.unconfirmed_email}
            -# .field
            -#   = f.label :password
            -#   %i (leave blank if you don't want to change it)
            -#   %br/
            -#   = f.password_field :password, autocomplete: "new-password"
            -# .field
            -#   = f.label :password_confirmation
            -#   %br/
            -#   = f.password_field :password_confirmation, autocomplete: "new-password"
            -# .field
            -#   = f.label :current_password
            -#   %i (we need your current password to confirm your changes)
            -#   %br/
            -#   = f.password_field :current_password, autocomplete: "current-password"
            .field
              = f.label :名字
              %span.form-require 必須
              %br/
              = f.text_field :first_name, autofocus: true, autocomplete: "first_name"
            
            .field
              = f.label :名字フリガナ
              %span.form-require 必須
              %br/
              = f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana"
            
            .field
              = f.label :名前
              %span.form-require 必須
              %br/
              = f.text_field :last_name, autofocus: true, autocomplete: "last_name"
            
            .field
              = f.label :名前フリガナ
              %span.form-require 必須
              %br/
              = f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana"
            .field
              = f.label :生年月日
              %span.form-require 必須
              %br/
              = f.date_select :birthday, use_month_numbers: true, start_year: (Time.now.year), end_year: 1900, prompt:"--"
            
            .actions
              = f.submit "更新"
              = link_to "Back", :back
      -# フッターはここから
    = render partial: 'layouts/registrations_footer'