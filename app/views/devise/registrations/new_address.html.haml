-# %h2 住所情報登録
.main
  .user-sign__up
    .header_logo
      -# = link_to root_path  do
      -#   = image_tag 'logo/logo.png'
      %nav.progress-bar
        %ol.clearfix
          %li.active
            会員情報
            .progress-status__active
          %li.active
            送付先住所入力
            .progress-status__active
          %li
            登録完了
            .progress-status

.user-sign__up__title
  %h2 商品送付先住所登録
.user-sign__up__form
  = form_for @address do |f|
    = render "devise/shared/error_messages", resource: @address
    .user-sign__up__form__content

    .field
      = f.label :送付先名字
      %span.form-require 必須
      %br/
      = f.text_field :first_name
      -# = f.text_field :last_name, placeholder:"例）佐藤", required:"required", class:"input-form__name"
      -# = f.text_field :first_name, placeholder:"例）祐介", required:"required", class:"input-form__name"

    .field
      = f.label :送付先名字フリガナ
      %span.form-require 必須
      %br/
      = f.text_field :first_name_kana

    .field
      = f.label :送付先名前
      %span.form-require 必須
      %br/
      = f.text_field :last_name

    .field
      = f.label :送付先名前フリガナ
      %span.form-require 必須
      %br/
      = f.text_field :last_name_kana

    .field
      = f.label :郵便番号
      %span.form-require 必須
      %br/
      = f.text_field :postal_code, placeholder:"1235678", required:"required", class:"input-form"

    .field
      = f.label :都道府県
      %span.form-require 必須
      %br/
      = f.text_field :prefectur, placeholder:"東京都", required:"required", class:"input-form"
      -# = f.collection_select :prefecture_id, Prefecture.all, :id, :name
      
    .field
      = f.label :市区町村
      %span.form-require 必須
      %br/
      = f.text_field :city, placeholder:"渋谷区", required:"required", class:"input-form"

    .field
      = f.label :番地
      %span.form-require 必須
      %br/
      = f.text_field :house_number, placeholder:"富ケ谷１丁目", required:"required", class:"input-form"

    .field
      = f.label :マンション・ビル名※部屋番号は任意
      = f.text_field :apartment, placeholder:"〇〇ビル〇〇号室", class:"input-form"

    .field
      = f.label :電話番号※任意
      = f.text_field :phone, placeholder:"09012345678", class:"input-form"

    .actions
      = f.submit "会員登録", class:"red-btn"

    -# .field
    -#   = f.label :address
    -#   %br/
    -#   = f.text_field :address
    -# .actions
    -#   = f.submit "Sign up"

  = render "devise/shared/links"
  -# = render partial: 'devise/footer'