%body
  = render partial: 'header'
  .breadCrumbs
    %ul
      = link_to "/" do
        = "FURIMA"
        %i.fa.fa-angle-right
      - @parents.each do |parent|
        -if @item.category_id == parent.id
          = link_to '#' do
            = parent.name
            %i.fa.fa-angle-right
        - parent.children.each do |child|
          -if @item.category_id == child.id
            = link_to '#' do
              = parent.name
            = link_to '#' do
              = child.name
          - child.children.each do |grandchild|
            -if @item.category_id == grandchild.id
              = link_to '#' do
                = parent.name
              %br
              = link_to '#' do
                = child.name
              %br
              = link_to '#' do
                = grandchild.name
              %br
      %p 
        = @item.name
  .min
    .showMain
      .contentLeftqq
      .contentRight
        .topContent
          .itemBox
            %h2.itemBox__name 
              = @item.name
            .itemBox__body
              %ul
                %li
                  = image_tag @item.images[0].image_url
                  %ul
                    %li
                      = image_tag 'https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png'
                    %li
                      = image_tag 'https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/14/a001.png'
                    %li
                      = image_tag 'https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/15/a003.png'
            .itemBox__price
              %span
                = @item.price + "円"
              .itemBox__price__detail
                %span2
                  = "(税込)"
                %span2
                  = @item.postage.name
            .buy
              - if user_signed_in? && current_user.id == @item.seller_id
                = link_to "商品を編集する", root_path
              - elsif user_signed_in? && current_user.id != @item.seller_id
                = link_to "購入画面に進む", item_purchase_index_path(@item.id), method: :get
              - else
                = link_to "ログインして下さい", root_path
            .itemDetail 
              = @item.detail
            .table
              %table
                %tbody
                  %tr
                    %th 
                      = "出品者"
                    %td 
                      = @user.nickname
                  %tr
                    %th 
                      = "カテゴリー"
                    %td
                      - @parents.each do |parent|
                        -if @item.category_id == parent.id
                          = link_to '#' do
                            = parent.name
                            %br
                        - parent.children.each do |child|
                          -if @item.category_id == child.id
                            = link_to '#' do
                              = parent.name
                              %br
                            = link_to '#' do
                              = child.name
                              %br
                          - child.children.each do |grandchild|
                            -if @item.category_id == grandchild.id
                              = link_to '#' do
                                = parent.name
                              %br
                              = link_to '#' do
                                = child.name
                              %br
                              = link_to '#' do
                                = grandchild.name
                              %br
                  %tr
                    %th 
                      = "ブランド"
                    %td
                  -# %tr
                  -#   %th 
                  -#     = "商品のサイズ"
                  -#   %td
                  %tr
                    %th 
                      = "商品の状態"
                    %td 
                      = @item.status.name
                  %tr
                    %th 
                      = "配送料の負担"
                    %td 
                      = @item.postage.name
                  %tr
                    %th 
                      = "発送元の地域"
                    %td
                      = link_to "/" do

                        = @item.prefecture.name
                  %tr
                    %th 
                      = "発送日の目安"
                    %td 
                      = @item.shipping_day.name
            .optionalArea
              %ul
                %li#likeBtn.optionalBtn.likeBtn
                  %i.fa.fa-star
                    = "お気に入り 0"
              %ul.optional
                %li.optionalBtn
                  = link_to "/" do
                    %i.fa.fa-flag
                      = "不適切な商品の通報"
          .commentBox
            %ul.commentContents
            %form#new_comment.new_commen{"accept-charset": "UTF-8", action: "#", method: "post"}
              %input{name: "utf8", type: "hidden", value: "✓"}/
              %input{name: "authenticity_token",type: "hidden", value: "MQsyz3UXwwwNaZaL6S2a2LGj5sY2EojyTB72g4YZeiZRECQkWZOG14SzJp0P20UDb7hwJO8S68MqP+I1VnvQ=="}/
              %textarea#comment_body{name: "comment[body]", required: "required"}
              %p.noticeMsg
                = "相手のことを考え丁寧なコメントを心けましょう。"
                %br/
                = "不快な言葉遣いなどは利用制限や退会分となることがあります。"
              %br/
              %button.commentBtn{name: "button",type: "submit"}
                %i.fa.fa-comment
                = "コメントする"
        %ul.links
          %li
            = link_to "/" do
              %i.fa.fa-angle-left
              %span
                = "前の商品"
          %li
            = link_to "/" do
              %span 
                = "後ろの商品"
              %i.fa.fa-angle-right
          
        .relatedItems
          = link_to "/" do
            = "ベビー・キッズをもっと見る"
          .productLists
            .productList
              = link_to "/" do
                .productList--img
                  = image_tag 'https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/16/IMG_9072.JPG'
                .productList--body
                  %h3.name
                    = "ee"
                  .details
                    %ul
                      %li
                        = "1000円"
                      %li
                        %i.fa.fa-starlikeIcon
                        = icon("fa", "star")
                        = "0"
                    %p
                      = "(税込)"
      
  .appBanner
    .inner
      %h2.inner__title
        = "だれでもかんたん、人生を変えるフリマアプリ"
      %p.inner__text
        = "今すぐ無料ダウンロード！"
      .inner__btn
        = link_to "/", class:"abtn" do
          = image_tag 'http://furima.tokyo/assets/app-store-9c5e28e8f81bd9912e0ded2f78821e04778a1356c05dc7c7bf1e88614be37c34.svg'
        = link_to "/", class:"abtn" do
          = image_tag 'http://furima.tokyo/assets/google-play-469c63f1269e456307c4dde176b33cc3bbbbf142ac4d7369656010130149db1a.svg'
  = render partial: 'footer'
  = link_to "/" do
    .pur-btn
      %span.pur-btn__text
        = "出品する"
      = image_tag 'icon/icon_camera.png' 